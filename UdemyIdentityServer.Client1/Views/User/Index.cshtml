
@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Authentication;
<a  class="btn btn-danger" asp-action="LogOut">Çıkış yap</a>
<a class="btn btn-success"  asp-action="GetRefreshToken">Refresh Token Yenile</a>

<h3>Bu Sayfayı Sadece Üye Olanlar Görebilir.</h3>

<h4>Claim Verileri</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in User.Claims)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>

</table>

<h4>Authentication Verileri</h4>



<table class="table table-bordered">
    <thead>
    <tr>
        <th>Auth Prop Key</th>
        <th>Auth Prop Value</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <tr>
            <td>@item.Key</td>
            <td>@item.Value</td>
        </tr>
    }
    </tbody>

</table>